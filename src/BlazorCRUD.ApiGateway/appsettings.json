{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ],
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "studentRoute": {
        "ClusterId": "studentCluster",
        "Match": {
          "Path": "/students/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ],
        "AuthorizationPolicy": "Authenticated"
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://blazorcrud-auth-api"
          }
        }
      },
      "studentCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://blazorcrud-student-api"
          }
        }
      }
    }
  }
}
